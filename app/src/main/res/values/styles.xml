<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="preferenceTheme">@style/YaPreferenceTheme</item>
    </style>

    <style name="YaPreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

</resources>
